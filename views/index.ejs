<%- include('partials/header.ejs')%>

    <body>
        <%- include('partials/navbar.ejs')%>
            <div class="container">

                <hr>

                <h1>Perguntas</h1>

                <hr>
                <a href="/perguntar" class="btn btn-success">Perguntar</a>
                <hr>

                <% perguntas.forEach(pergunta=> {%>

                    <div class="card">
                        <div class="card-body">
                            <%=pergunta.titulo%>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary mt-1" href="/pergunta/<%=pergunta.id%>">Responder</a>
                        </div>
                    </div>

                    <% }); %>
            </div>
    </body>
    <%- include('partials/footer.ejs')%>